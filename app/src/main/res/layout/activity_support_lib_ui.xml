<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_support_ui"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:background="@drawable/rect6"
        android:id="@+id/btnRecyclerView"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="ViewPager与TabLayout"
        android:background="@drawable/rect7"
        android:id="@+id/btnViewPager"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="CardView"
        android:background="@drawable/rect8"
        android:id="@+id/btnCardView"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="Toolbar"
        android:background="@drawable/rect9"
        android:id="@+id/btnToolbar"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="CoordinatorLayout与AppBarLayout"
        android:background="@drawable/rect1"
        android:id="@+id/btnCLAPL"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="FloatingActionButton"
        android:background="@drawable/rect2"
        android:id="@+id/btnFloatingActionButton"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="TextInputLayout与TextInputEditText"
        android:background="@drawable/rect3"
        android:id="@+id/btnTextInputLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="Snackbar"
        android:background="@drawable/rect4"
        android:id="@+id/btnSnackbar"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="CollapsingToolbarLayout"
        android:background="@drawable/rect7"
        android:id="@+id/btnCollapsingToolbarLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="NestedScrollView"
        android:background="@drawable/rect8"
        android:id="@+id/btnNestedScrollView"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="DrawerLayout"
        android:background="@drawable/rect9"
        android:id="@+id/btnDrawerLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="SwipeRefreshLayout"
        android:background="@drawable/rect1"
        android:id="@+id/btnSwipeRefreshLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="SlidingPaneLayout"
        android:background="@drawable/rect2"
        android:id="@+id/btnSlidingPaneLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="ConstraintLayout"
        android:background="@drawable/rect3"
        android:id="@+id/btnConstraintLayout"/>

    <com.android.common.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item"
        android:text="BottomSheetDialog"
        android:background="@drawable/rect4"
        android:id="@+id/btnBottomSheetDialog"/>

</LinearLayout>
</ScrollView>
</FrameLayout>