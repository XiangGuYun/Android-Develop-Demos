<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.draw.xml.ShapeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.android.common.view.Header1View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mainTitle1="SHAPE"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:text="Shape支持的属性（查看）"/>

        <com.android.common.view.Header1View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/header1"
            app:mainTitle1="绘制(圆角)矩形"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="你好呀！！！！！！！！！"
            android:background="@drawable/shape1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:text="分析：对于solid、padding、corners标签的使用过于简单，在此不作详述。接下来将研究一下gradient和stroke标签。"/>

        <com.android.common.view.Header1View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/header2"
            app:mainTitle1="线性渐变linear"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:gravity="center"
            android:text="当angle为0时"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape1_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:gravity="center"
            android:text="当angle为45时"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape1_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:gravity="center"
            android:text="当angle为90时"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape1_3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/small_title"
            android:gravity="center"
            android:text="当angle为135时"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape1_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.android.common.view.Header1View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="扫描渐变sweep"/>

        <TextView
            android:background="@drawable/shape2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.android.common.view.Header1View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="放射渐变radial"/>

        <TextView
            android:background="@drawable/shape3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.android.common.view.Header1View
            android:id="@+id/headerDash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="绘制虚线边框"/>

        <TextView
            android:background="@drawable/shape4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.android.common.view.Header1View
            android:id="@+id/headerOval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="绘制椭圆Oval"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape5"/>

        <com.android.common.view.Header1View
            android:id="@+id/headerLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="绘制线段Line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layerType="software"
            android:background="@drawable/shape6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layerType="software"
            android:background="@drawable/shape6_1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/shape6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/shape6_1" />

        <com.android.common.view.Header1View
            android:id="@+id/headerRing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mainTitle1="绘制圆环Ring"/>

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/shape_progress1" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/shape_progress2" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/shape_progress3" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/shape_progress" />

    </LinearLayout>

</ScrollView>
