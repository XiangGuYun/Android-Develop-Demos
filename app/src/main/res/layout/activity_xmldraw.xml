<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.draw.xml.XMLDrawActivity"
    android:paddingLeft="10dp"
    android:orientation="vertical">

    <com.android.common.view.MyTextView
        android:id="@+id/btnShape"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rect1"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Shape"/>

    <com.android.common.view.MyTextView
        android:id="@+id/btnLayer"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rect2"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Layer"/>

    <com.android.common.view.MyTextView
        android:id="@+id/btnBitmap"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rect4"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Bitmap"/>



</LinearLayout>
