<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supportlib.cardview.CardViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.android.view.Header1View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mainTitle1="CardView"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            app:cardPreventCornerOverlap="true"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/frag_girl"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="欢迎学习CardView\n点我换颜色"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="27sp"/>
        </android.support.v7.widget.CardView>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="cardElevation阴影大小"
           android:gravity="center"
           style="@style/small_title"/>

        <SeekBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="radius圆角半径大小"
            android:gravity="center"
            style="@style/small_title"/>

        <SeekBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="setContentPadding内容内边距大小"
            android:gravity="center"
            style="@style/small_title"/>

        <SeekBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="setCardMaxElevation最大阴影值"
            android:gravity="center"
            style="@style/small_title"/>

        <SeekBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb4"/>

    </LinearLayout>

</ScrollView>