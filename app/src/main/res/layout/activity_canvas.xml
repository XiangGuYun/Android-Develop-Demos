<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".huitu.canvas.CanvasActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <com.androidui.huitu.view.DrawPathView
                android:id="@+id/path"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="close"
                android:layout_gravity="right|bottom"
                android:id="@+id/btnClosePath"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线操作"
            style="@style/tvTitle1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tvSmallTitle"
            android:text="lineTo(float x, float y)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/tvSmallTitle"
                android:text="x"/>
            <EditText
                android:inputType="number|numberDecimal"
                android:id="@+id/etLineToX"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/tvSmallTitle"
                android:text="y"/>
            <EditText
                android:inputType="number|numberDecimal"
                android:id="@+id/etLineToY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnLineTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成"/>
        </LinearLayout>
        <TextView
            style="@style/tvSmallTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rLineTo(float dx, float dy)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/tvSmallTitle"
                android:text="dx"/>
            <EditText
                android:inputType="number|numberDecimal"
                android:id="@+id/etRLineToX"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/tvSmallTitle"
                android:text="dy"/>
            <EditText
                android:inputType="number|numberDecimal"
                android:id="@+id/etRLineToY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnRLineTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成"/>
        </LinearLayout>
        <include layout="@layout/line"/>
        <!--绘制点-->
        <include layout="@layout/draw_point"/>
        <!--绘制圆形-->
        <include layout="@layout/draw_circle"/>
        <!--绘制矩形-->
        <include layout="@layout/draw_rect"/>
        <!--绘制椭圆-->
        <include layout="@layout/draw_oval"/>
        <!--绘制线段-->
        <include layout="@layout/draw_line"/>
        <!--绘制圆弧和扇形-->
        <include layout="@layout/draw_arc"/>
    </LinearLayout>

</ScrollView>