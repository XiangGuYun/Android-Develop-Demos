<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gesture.ScaleGestureDetectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.androidui.view.Header1View
            android:id="@+id/headerMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mainTitle1="ScaleGestureDetector\n常用方法"/>

        <com.androidui.gesture.view.ScaleImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@mipmap/bg_girl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvState"/>

        <TextView
            android:id="@+id/tvLog1"
            android:minLines="1"
            android:background="@drawable/rect7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"/>

    </LinearLayout>

</ScrollView>